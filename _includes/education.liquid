<div class="education">
  {% if site.news != blank %}
    {% assign news_size = site.news | size %}
    <div
      class="table-responsive"
      {% if include.limit and site.announcements.scrollable and news_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign news = site.news | reverse %}
        {% if include.limit and site.announcements.limit %}
          {% assign news_limit = site.announcements.limit %}
        {% else %}
          {% assign news_limit = news_size %}
        {% endif %}
        <tr>
          <th scope="row" style="width: 30%"><img src="/assets/img/SNU_logo.jpeg" width="120" height="120"></th>
          <td>
              <a>[Seoul National University]() <br> Ph.D Student in Artificial Intelligence, advised by [Kyomin Jung](http://milab.snu.ac.kr/kjung/index.html) <br> Sep 2021 ~ 
          </td>
        </tr>
        <tr>
          <th scope="row" style="width: 30%"><img src="/assets/img/KAIST_logo.jpeg" width="120" height="120"></th>
          <td>
              <a>[KAIST]() <br> Bachelor of Engineering in Industrial Engineering <br> Mar 2014 ~ Feb 2018
          </a>
          </td>
        </tr>
      </table>
    </div>
  {% else %}
    <p>No news so far...</p>
  {% endif %}
</div>
